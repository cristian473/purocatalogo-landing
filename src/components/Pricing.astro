---
const plans = [
  {
    name: "Free",
    price: "0",
    currency: "ARS",
    description: "Recomendado para peque침os negocios",
    features: [
      "Hasta 1 cat치logo",
      "Hasta 25 productos",
      "Visitantes ilimitados",
      "1 usuario",
      "Sin comisiones",
      "Enlace de purocatalogo.com",
      "Soporte por email"
    ],
    cta: "Comenzar Gratis",
    popular: false,
    color: "secondary"
  },
  {
    name: "Pro",
    price: "8.900",
    currency: "ARS",
    description: "Para negocios que quieren crecer en Argentina",
    features: [
      "Cat치logos Ilimitados",
      "Productos Ilimitados",
      "Visitantes Ilimitados",
      "Colaboradores Ilimitados",
      "Sin comisiones",
      "Enlace personalizado",
      "Soporte prioritario"
    ],
    cta: "Elegir Pro",
    popular: true,
    color: "primary"
  }
];
---

<section id="pricing" class="section bg-white dark:bg-secondary-950">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block px-4 py-1 rounded-full bg-accent-100 dark:bg-accent-900/50 text-accent-700 dark:text-accent-300 font-medium text-sm mb-4">
        Planes y Precios
      </span>
      <h2 class="mb-6 text-secondary-900 dark:text-white">Planes para cada necesidad</h2>
      <p class="text-secondary-600 dark:text-secondary-300">
        Comienza gratis y escala cuando lo necesites. Sin costos ocultos.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {plans.map((plan, index) => (
        <div 
          class={`card p-8 border ${plan.popular ? `border-${plan.color}-500 dark:border-${plan.color}-400 ring-4 ring-${plan.color}-500/10` : 'border-secondary-200 dark:border-secondary-700'} slide-up relative transition-transform duration-300 hover:-translate-y-2`}
          style={`animation-delay: ${index * 150}ms`}
        >
          {plan.popular && (
            <div class={`absolute top-0 right-0 bg-${plan.color}-500 text-white px-4 py-1 text-sm font-medium rounded-bl-lg`}>
              M치s Popular
            </div>
          )}
          
          <h3 class="text-2xl font-bold mb-2 text-secondary-900 dark:text-white">{plan.name}</h3>
          <p class="text-secondary-600 dark:text-secondary-300 mb-6 h-12">{plan.description}</p>
          
          <div class="mb-8">
            <span class="text-4xl font-bold text-secondary-900 dark:text-white">${plan.price}</span>
            <span class="text-secondary-500 dark:text-secondary-400 font-medium ml-2">{plan.currency}/MES</span>
          </div>
          
          <ul class="space-y-4 mb-8">
            {plan.features.map(feature => (
              <li class="flex items-start">
                <div class={`rounded-full p-1 bg-${plan.popular ? 'primary' : 'secondary'}-100 dark:bg-${plan.popular ? 'primary' : 'secondary'}-900/30 mr-3 mt-0.5`}>
                   <svg class={`w-4 h-4 text-${plan.popular ? 'primary' : 'secondary'}-600 dark:text-${plan.popular ? 'primary' : 'secondary'}-400`} fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <span class="text-secondary-700 dark:text-secondary-300">{feature}</span>
              </li>
            ))}
          </ul>
          
          <a 
            href="https://admin.purocatalogo.com/register" 
            class={`w-full btn ${plan.popular ? 'btn-primary' : 'btn-outline'}`}
            onclick={`window.trackEvent && window.trackEvent('cta_click', {cta_location: 'pricing', cta_text: '${plan.cta}', plan_name: '${plan.name}'})`}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
